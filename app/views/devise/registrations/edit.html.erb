<div class="container">

  <div class="container text-center">
    <h2 class=" pt-3 pb-2"><b>Welcome to edit <a style="color:  #FF5C20">Hostel</a> management System</b></h2>
    <hr class="w-100 mx-auto">
  </div>

   <div class="row mt-2">
    <div class="col-12">
      <h2><b>Sign Up</b></h2>
      <%= form_for @user, url: user_registration_path do |f| %>
      
          <div class="row mt-4">
              <div class="col">
                <label>First Name :</label><br>
                  <%=f.text_field :firstname, class:'form-control'%>
                  <span style='color:red'><%=@user.errors[:firstname].to_sentence%></span>
              </div>
                        <div class="col">
                <label>Last Name :</label><br>
                  <%=f.text_field :lastname, class:'form-control'%>
              </div>
          </div>

          <div class="row mt-4">
              <div class="col">
                <label>Role :</label><br>
                <%=f.select :role,['student'],{},{class:'form-control'}%>
              </div>
          </div>

                    <div class="row mt-2">
              <div class="col">
                <label>Email Id :</label>
                <%=f.email_field :email, class:'form-control'%>
                <span style='color:red'><%=@user.errors[:email].to_sentence%></span>
              </div>
            </div>

                      <div class="row mt-2">
              <div class="col">
                <label>Phone No :</label>
                <%=f.text_field :phoneno, class:'form-control'%>
              </div>
            <div class="col",display=<%=@visable%>>
                <label>Room No :</label>
                <%=f.text_field :room_no, class:'form-control',readonly:true%>
              </div>
            </div>
            <div class="row mt-2">
              <div class="col">
                <label>Upload Your Photo :</label>
                <%=f.file_field :ProfilePic, class:'form-control'%>
              </div>
              <div class="col">
                <label>Hostel Address :</label>
                <%=f.text_area :address, class:'form-control'%>
                <span style='color:red'><%=@user.errors[:address].to_sentence%></span>
              </div>
            </div>
            
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
              <span style='color:red'><%=@user.errors[:password].to_sentence%></span>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>
              <span style='color:red'><%=@user.errors[:password_confirmation].to_sentence%></span>
            </div><br><br>
          <%=f.submit 'Sign Up'%>   
                <%end%>
    </div>
  </div>
</div>


