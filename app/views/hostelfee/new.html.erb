<%= render 'student/header' %>
<%= render 'student/menu' %>
<%if flash[:PaymentNotice]%>
                   <%=flash[:PaymentNotice]%>
                   <%end%>
<div style="height:auto;width:60%;margin-top:5%;margin-left:30%;border:2px solid orange;border-radius:5%" class="bg-light">
  
	   			<h2 class="pt-4 text-center"><b>Pay your hoatel fee</b></h2>
	   			<hr>
                   
                   <%= form_for @hostelfee,url:payment_index_path,method:'get' do |f| %>
                    <div class="row">
                        <div class="col-3 col-sm-3 "><h3 class="pl-4">Email:</h3></div>
                        <div class="col-5 col-sm-5 mb-5"><%=text_field_tag 'Email Id',current_user.email,class:'form-control',readonly:true%></div>
                        <div class="col-4 col-sm-4"></div>
                    </div>

                    <div class="row">
                        <div class="col-3 col-sm-3 "><h3 class="pl-4">Year:</h3></div>
                        <div class="col-5 col-sm-5 mb-5"><input type="text" class="form-control" readonly='true' value=<%=Date.today.year%>></div>
                        <div class="col-4 col-sm-4"></div>
                    </div>
                    <br><br>
                    <div class="row">
                        <div class="col-12 col-sm-12">
                        <center>
                        <%=f.submit 'Pay Now',class:'mb-3'%>
                        </center>
                        </div>
                    </div>
                   <% end %>
		   			
	   		</div>